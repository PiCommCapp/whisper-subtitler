# Whisper model configuration 
WHISPER_MODEL_SIZE=small  # Using smaller model for speed
WHISPER_LANGUAGE=en
WHISPER_BEAM_SIZE=5  # Beam search width for Whisper
WHISPER_BEST_OF=5  # Number of samples for beam search
WHISPER_TEMPERATURE=0.0  # Temperature for sampling (0.0 for deterministic output)
WHISPER_INITIAL_PROMPT=  # Optional: initial prompt to guide transcription
AUTO_MODEL_SELECTION=false  # Set to true to automatically select optimal model
MODEL_SELECTION_CRITERIA=balanced  # Options: accuracy, speed, balanced
OPTIMIZE_FOR_AUDIO=true  # Optimize parameters based on audio type

# Disable speaker diarization
SKIP_DIARIZATION=true

# Audio processing settings
AUDIO_SAMPLE_RATE=32000
AUDIO_CHANNELS=1
AUDIO_CONVERSION=true  # Convert audio to optimal format
AUDIO_NORMALIZATION=true  # Normalize audio volume
NOISE_REDUCTION=true  # Apply noise reduction
HIGH_PASS_FILTER=true  # Apply high-pass filter
HIGH_PASS_CUTOFF=80  # High-pass filter cutoff frequency (Hz)

# Output settings
OUTPUT_FORMATS=txt,srt,vtt,ttml
TTML_TITLE=Transcription
TTML_LANGUAGE=en-GB

# Performance settings
USE_CUDA=true
OMP_NUM_THREADS=4
CUDA_VISIBLE_DEVICES=0 